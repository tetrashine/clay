{
  "compilerOptions": {
      "rootDir": "src/",
      "baseUrl": "src/",
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true, 
      "allowJs": true,
      "types": ["node"],
      "target": "es2017"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}